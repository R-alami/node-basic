<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h3>Chat me Here!!!</h3>
            <ul id="messages"></ul>
            <form>
                <div class="form-group">
                    <label for="inputName">Your Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Give your name...">
                </div>
                <div class="form-group">
                    <label for="inputMessage">Your messages</label>
                    <input type="text" class="form-control" id="message" onkeypress="userIsTyping()" placeholder="type here...">
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
        <div class="col-sm-4">
            <h3>Users</h3>
            <p id="userTyping"></p>
        </div>
    </div>
</div>
